<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>ProgettoCurriculumVitae</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
      <servlet>
        <servlet-name>myServlet</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>myServlet</servlet-name>
        <url-pattern>/games.jsp</url-pattern>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/games.html</url-pattern>
        <url-pattern>*.html</url-pattern>

    </servlet-mapping>
  
       <servlet>
        <servlet-name>TrisController</servlet-name>
        <servlet-class>
            com.curriculum.controller.TrisController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrisController</servlet-name>
        <url-pattern>/TrisController</url-pattern>
    </servlet-mapping>
</web-app>